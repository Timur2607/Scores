<Window x:Class="Scores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scores"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Модуль 1: Базы данных (макс. 22 балла)" Margin="0,5"/>
        <TextBox x:Name="Module1Score" Margin="0,0,0,10"/>

        <TextBlock Text="Модуль 2: Разработка ПО (макс. 38 баллов)" Margin="0,5"/>
        <TextBox x:Name="Module2Score" Margin="0,0,0,10"/>

        <TextBlock Text="Модуль 3: Обслуживание ПО (макс. 20 баллов)" Margin="0,5"/>
        <TextBox x:Name="Module3Score" Margin="0,0,0,20"/>

        <Button Content="Рассчитать" Click="CalculateButton_Click" 
                Background="LightBlue" FontWeight="Bold" Padding="10,5"/>

        <TextBlock x:Name="TotalScoreText" Margin="0,20,0,5" FontSize="14"/>
        <TextBlock x:Name="GradeText" FontSize="16" FontWeight="Bold"/>
    </StackPanel>
        
    
</Window>
